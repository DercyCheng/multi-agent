# Multi-Agent API Gateway Environment Configuration

# Server Configuration
GATEWAY_PORT=8080
GATEWAY_MODE=development
GATEWAY_READ_TIMEOUT=30
GATEWAY_WRITE_TIMEOUT=30
GATEWAY_IDLE_TIMEOUT=120

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=3600
API_KEY_HEADER=X-API-Key
REDIS_URL=redis://localhost:6379/4

# Backend Services Configuration
ORCHESTRATOR_URL=http://localhost:8081
ORCHESTRATOR_TIMEOUT=30
ORCHESTRATOR_RETRIES=3

LLM_SERVICE_URL=http://localhost:8000
LLM_SERVICE_TIMEOUT=60
LLM_SERVICE_RETRIES=3

AGENT_CORE_URL=http://localhost:8082
AGENT_CORE_TIMEOUT=30
AGENT_CORE_RETRIES=3

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MIN=100
RATE_LIMIT_BURST_SIZE=10
RATE_LIMIT_CLEANUP_PERIOD=300

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Security Configuration
ENABLE_HTTPS=false
CERT_FILE=
KEY_FILE=
TRUSTED_PROXIES=
MAX_REQUEST_SIZE=10485760
REQUEST_TIMEOUT=30
ENABLE_CSRF=false
CSRF_SECRET=
CONTENT_TYPE_NO_SNIFF=true
FRAME_OPTIONS=DENY